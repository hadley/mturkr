<QuestionForm xmlns = "http://mechanicalturk.amazonaws.com/AWSMechanicalTurkDataSchemas/2005-10-01/QuestionForm.xsd">
  <Overview>
    <Title>Question {{question_id}}</Title>
    <Text>
      This is an overview of the questions for the worker to complete.
    </Text>
  </Overview>
  <Question>
    <QuestionIdentifier>age</QuestionIdentifier>
    <IsRequired>true</IsRequired>
    <QuestionContent>
      <Text>
        How old are you?
      </Text>
    </QuestionContent>
    <AnswerSpecification>
      <FreeTextAnswer>
        <Constraints>
          <IsNumeric />
        </Constraints>
      </FreeTextAnswer>
    </AnswerSpecification>
  </Question>
  <Question>
    <QuestionIdentifier>sex</QuestionIdentifier>
    <IsRequired>true</IsRequired>
    <QuestionContent>
      <Text>
        Are you male or female?
      </Text>
    </QuestionContent>
    <AnswerSpecification>
      <SelectionAnswer>
        <StyleSuggestion>radiobutton</StyleSuggestion>
        <Selections>
          <Selection>
            <SelectionIdentifier>m</SelectionIdentifier>
            <Text>Male</Text>
          </Selection>
          <Selection>
            <SelectionIdentifier>f</SelectionIdentifier>
            <Text>Female</Text>
          </Selection>
          <Selection>
            <SelectionIdentifier>NA</SelectionIdentifier>
            <Text>Prefer not answer</Text>
          </Selection>
        </Selections>
      </SelectionAnswer>
    </AnswerSpecification>
  </Question>
  <Question>
    <QuestionIdentifier>age</QuestionIdentifier>
    <IsRequired>true</IsRequired>
    <QuestionContent>
      <Text>
        What is your favourite type of {{food}}?
      </Text>
    </QuestionContent>
    <AnswerSpecification>
      <FreeTextAnswer>
      </FreeTextAnswer>
    </AnswerSpecification>
  </Question>
  
</QuestionForm>